<a href="./todos/new">Create</a>
<ul>
  {{#each todos}}
    <li>
      {{this.name}}
      {{! 透過Robo 3T 裡面自動建立_id }}
      <a href="./todos/{{this._id}}">detail</a>
      <a href="./todos/{{this._id}}/edit">edit</a>
      <form
        action="./todos/{{this._id}}/delete"
        method="POST"
        style="display: inline"
      >
        <button type="submit">delete</button>
      </form>
    </li>
  {{/each}}
</ul>